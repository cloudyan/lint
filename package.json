{
  "name": "@deepjs/lint",
  "version": "0.0.16",
  "description": "A collection of configuration files containing prettier, eslint, stylelint",
  "keywords": [
    "lint",
    "eslint",
    "prettier",
    "stylelint",
    "editorconfig"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "bin": {
    "lint": "./cli.js",
    "cooklint": "./cli.js"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist",
    "cli.js"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "deps": "yarn upgrade-interactive --latest",
    "lib": "cross-env TIMING=1 eslint lib",
    "prepublishOnly": "np --no-cleanup --no-yarn --yolo --no-publish --any-branch --no-verify",
    "prelint": "npm run build",
    "lint-staged": "lint-staged",
    "prettier": "prettier . --check",
    "prettier:fix": "npm run prettier -- --write",
    "prettier:diff": "npm run prettier:fix && git --no-pager diff && git checkout -- .",
    "eslint": "cross-env TIMING=1 eslint --ext .js,.jsx,.ts,.tsx --format=pretty ./src",
    "eslint:fix": "npm run eslint -- --fix",
    "eslint:report": "npm run eslint -- --format json --output-file ./eslint-report.json",
    "stylelint": "stylelint --allow-empty-input 'src/**/*.{css,less,scss,sass}'",
    "stylelint:fix": "npm run stylelint -- --fix",
    "testTS": "npm run build && cd tsExample && npm run lint",
    "testJS": "npm run build && cd jsExample && npm run lint",
    "test": "npm run lint-staged",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,yml,yaml,css,less,scss}": [
      "npm run prettier:fix"
    ],
    "./src/**/*.{js,jsx,ts,tsx}": [
      "npm run eslint:fix"
    ],
    "*.{css,less,scss}": [
      "npm run stylelint:fix"
    ]
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "fast-glob": "^3.2.7",
    "os-locale": "^6.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/eslint-parser": "^7.18.2",
    "@babel/eslint-plugin": "^7.17.7",
    "@babel/plugin-proposal-class-properties": "^7.17.12",
    "@babel/plugin-proposal-decorators": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-react": "^7.17.12",
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-formatter-pretty": "^4.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.4.2",
    "prettier": "^2.6.2",
    "prettier-eslint": "^15.0.1",
    "stylelint": "^14.8.5",
    "stylelint-config-css-modules": "^4.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-rational-order": "^0.0.4",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
    "stylelint-no-unsupported-browser-features": "^5.0.3",
    "stylelint-order": "^5.0.0",
    "typescript": "^4.4.4"
  }
}
